<view class="wrap">
    <!-- 头部组件需要替换区 -->
    <view style="background-color: rgb(50, 136, 248);height: 80rpx;padding-top: 100rpx;   box-shadow: 4px 2px 8px 6px rgba(0, 0, 0, 0.06);" class="flex around">
        <view>
            <view class="arrow arrow-left left-" bindtap="back"></view>
        </view>
        <view>
        </view>
        <view style="color: rgb(50, 136, 248);">
            左边
        </view>
    </view>
    <!-- 头部组件需要替换区 -->

    <!--联系人-->
    <view class="wrap bg_color">
        <view>
            <view class="addContacts" bindtap="addContact">
                + 添加联系人
            </view>
        </view>
        <view class="list">
            <view wx:for="{{contactList}}" wx:for-item="item" data-index="{{index}}" wx:key="OID">
                <view data-index="{{index}}" class="contact-item">
                    <view class="flex between" data-index="{{index}}">
                        <view class="wrap" data-index="{{index}}">
                        <view wx:if="{{item.Crux}}" data-index="{{index}}" class="key" />
                            <view class="flex between">
                                <view class="title2">{{item.ContactName}}</view>
                                <view class="title4 top-">{{item.Sex.Name}}</view>
                            </view>
                            <view class="title4 top-">电话：{{item.Telephone}}</view>
                        </view>

                        <view class="flex between">
                            <view class="wrap">
                                <view class="title3">{{item.Department.Name}}</view>
                                <view class="title4 center top-">{{item.Job.Name}}</view>
                            </view>
                            <!-- <checkbox-group bindchange="checkIsSeleect">
                                <view data-index="{{index}}" class="check-style">
                                    <checkbox value="{{item.isSelect}}" color="blue" />
                                </view>
                            </checkbox-group> -->
                            <!-- <image src="../../../images/icon/dustbin.png" class="logo"/> -->
                            <view class="logo" bindtap="delete" data-index="{{index}}">×</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <!--联系人-->

    <!--底部按钮-->
    <view class="fiex_bottom">
        <view class="flex">
            <view class="btn btn-save" style="width: 540rpx;" bindtap="saveBtn">保存</view>
        </view>
    </view>
    <!--底部按钮-->
</view>

<!--添加联系人弹窗-->
<view wx:if="{{isFlag}}">
    <view class="addWindow-0">
        <view class="wrap addWindow-1">
            <view class="title2 contact-title">
                联系人<view class="close" bindtap="close">×</view>
            </view>
            <view class="contact-body">
                <view class="flex down-">
                    姓名：<input type="text" class="input-style" placeholder="请输入姓名" placeholder-class="placeholder-class title4 mar-left" value="{{contact.ContactName}}"bindinput="inputContactName" />
                </view>
                <view class="flex down-">
                    <view>性别：</view>
                    <picker class="input-style" bindchange="bindSex" value="{{index}}" range="{{SexArr}}" range-key="Name" mode="selector" header-text="性别">
                        <view wx:if="{{contact.Sex != ''}}" class="picker">
                            {{contact.Sex.Name}}
                        </view>
                        <view wx:if="{{contact.Sex == ''}}" class="flex between placeholder-class title4 mar-left">
                            <view>请选择性别</view>
                            <view class="arrow arrow-right arow-color"></view>
                        </view>
                    </picker>
                </view>
                <view class="flex down-">
                    <view>部门：</view>
                    <picker class="input-style" bindchange="bindDept" value="{{index}}" range="{{DeptArr}}" range-key="Name" mode="selector" header-text="部门">
                        <view wx:if="{{contact.Department != ''}}" class="picker">
                            {{contact.Department.Name}}
                        </view>
                        <view wx:if="{{contact.Department == ''}}" class="flex between placeholder-class title4 mar-left">
                            <view>请选择部门</view>
                            <view class="arrow arrow-right arow-color"></view>
                        </view>
                    </picker>
                </view>
                <view class="flex down-">
                    <view>职务：</view>
                    <picker class="input-style" bindchange="bindJob" value="{{index}}" range="{{JobArr}}" range-key="Name" mode="selector" header-text="职务">
                        <view wx:if="{{contact.Job != ''}}" class="picker">
                            {{contact.Job.Name}}
                        </view>
                        <view wx:if="{{contact.Job == ''}}" class="flex between placeholder-class title4 mar-left">
                            <view>请选择职务</view>
                            <view class="arrow arrow-right arow-color"></view>
                        </view>
                    </picker>
                </view>
                <view class="flex down-">
                    电话：<input type="text" class="input-style" placeholder="请输入电话" placeholder-class="placeholder-class title4 mar-left" value="{{contact.Telephone}}" bindinput="inputTelephone" />
                </view>
                <view class="flex down-">
                    邮箱：<input type="text" class="input-style" placeholder="请输入邮箱" placeholder-class="placeholder-class title4 mar-left" value="{{contact.Email}}" bindinput="inputEmail" />
                </view>
                <view class="flex down-">
                    其他：<input type="text" class="input-style" placeholder="请输入其他信息" placeholder-class="placeholder-class title4 mar-left" value="{{contact.Other}}" bindinput="inputOther" />
                </view>
                <checkbox-group bindchange="checkCrux">
                    <view class="flex down-">
                        关键联系人：<checkbox value="{{contact.Crux}}" disabled="{{isKeyContact}}"/>
                    </view>
                </checkbox-group>
            </view>
            <view style="margin-left: 35%;padding-bottom: 30rpx;">
               <view class="btn addbtn" bindtap="inset">添加</view>
            </view>
        </view>
    </view>
</view>