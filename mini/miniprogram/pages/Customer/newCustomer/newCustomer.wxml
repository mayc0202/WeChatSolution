<!--pages/Customer/newCustomer/newCustomer.wxml-->
<view class="wrap">
    <!-- 头部组件需要替换区 -->
    <view style="background-color: rgb(50, 136, 248);height: 80rpx;padding-top: 100rpx;   box-shadow: 4px 2px 8px 6px rgba(0, 0, 0, 0.06);" class="flex around">
        <view>
            <view class="arrow arrow-left left-" bindtap="back"></view>
        </view>
        <view>
        </view>
        <view style="color: rgb(50, 136, 248);">
            左边
        </view>
    </view>
    <!-- 头部组件需要替换区 -->
    
    <view style="padding: 50rpx 40rpx;">
        <view class="wrap">
            <view class="flex top- down- title3">
                客户名称：<input type="text" class="input-style" placeholder="请输入客户姓名" placeholder-class="placeholder-class title4 mar-left" value="{{customer.Name}}" bindinput="inputName" />
            </view>

            <view class="flex top- down-">
                客户编码：<input type="text" class="input-style" placeholder="请输入客户编码" placeholder-class="placeholder-class title4 mar-left" value="{{customer.Code}}" bindinput="inputCode" />
            </view>

            <view class="flex top- down-">
                <view>所属行业：</view>
                <picker class="input-style" bindchange="bindIndustry" value="{{index}}" range="{{IndustryIDArr}}" range-key="Name" mode="selector">
                    <view wx:if="{{customer.IndustryID != null}}" class="picker">
                        {{customer.IndustryID}}
                    </view>
                    <view wx:if="{{customer.IndustryID == null}}" class="flex between placeholder-class title4 mar-left">
                        <view>请选择部门</view>
                        <view class="arrow arrow-right arow-color"></view>
                    </view>
                </picker>
            </view>

            <view class="flex top- down-">
                <view>所属部门：</view>
                <picker class="input-style" bindchange="bindDept" value="{{index}}" range="{{DeptIDArr}}" range-key="Name" mode="selector">
                    <view wx:if="{{customer.DeptID != null}}" class="picker">
                        {{customer.DeptID}}
                    </view>
                    <view wx:if="{{customer.DeptID == null}}" class="flex between placeholder-class title4 mar-left">
                        <view>请选择部门</view>
                        <view class="arrow arrow-right arow-color"></view>
                    </view>
                </picker>
            </view>

            <view class="flex top- down-">
                <view>所属销售：</view>
                <picker class="input-style" bindchange="bindSalesman" value="{{index}}" range="{{SalesmanIDArr}}" range-key="Name" mode="selector">
                    <view wx:if="{{customer.SalesmanID != null}}" class="picker">
                        {{customer.SalesmanID}}
                    </view>
                    <view wx:if="{{customer.SalesmanID == null}}" class="flex between placeholder-class title4 mar-left">
                        <view>请选择销售</view>
                        <view class="arrow arrow-right arow-color"></view>
                    </view>
                </picker>
            </view>

            <view class="flex top- down-">
                <view>客户来源：</view>
                <picker class="input-style" bindchange="bindCustomerSource" value="{{index}}" range="{{CustomerSourceIDArr}}" range-key="Name" mode="selector">
                    <view wx:if="{{customer.CustomerSourceID != null}}" class="picker">
                        {{customer.CustomerSourceID}}
                    </view>
                    <view wx:if="{{customer.CustomerSourceID == null}}" class="flex between placeholder-class title4 mar-left">
                        <view>请选择客户来源</view>
                        <view class="arrow arrow-right arow-color"></view>
                    </view>
                </picker>
            </view>

            <view class="flex top- down-">
                注册资金：<input type="number" class="input-style" placeholder="请输入注册资金" placeholder-class="placeholder-class title4 mar-left" value="{{customer.RegisteredCapital}}" bindinput="inputRegisteredCapital" />
            </view>

            <view class="flex top- down-">
                企业性质：<input type="text" class="input-style" placeholder="请输入企业性质" placeholder-class="placeholder-class title4 mar-left" value="{{customer.EnterpriseNature}}" bindinput="inputEnterpriseNature" />
            </view>

            <view class="flex top- down-">
                <view>省/市/区：</view>
                <picker class="input-style" bindchange="bindAddress" value="{{region}}" custom-item="{{customItem}}" mode="region">
                    <view wx:if="{{region[0] != null}}" class="picker">
                        <view class="picker">
                            {{region[0]}}，{{region[1]}}，{{region[2]}}
                        </view>
                    </view>
                    <view wx:if="{{region[0] == null}}" class="flex between placeholder-class title4 mar-left">
                        <view>请选择客省/市/区</view>
                        <view class="arrow arrow-right arow-color"></view>
                    </view>
                </picker>
            </view>

            <view class="flex top- down-">
                详细地址：<textarea bindblur="bindLocation" auto-focus="true" style="background-color: rgb(255, 253, 253);height: 90rpx;width: 400rpx;border-radius: 10rpx;border: 1rpx rgb(241, 243, 248) inset;padding: 0 10rpx;" placeholder="请输入详细地址" placeholder-class="placeholder-class title4 mar-left" />
            </view>

            <view class="flex top- down-">
                开户银行：<input type="text" class="input-style" placeholder="请输入开户银行" placeholder-class="placeholder-class title4 mar-left" value="{{customer.Bank}}" bindinput="inputBank" />
            </view>

            <view class="flex top- down-">
                银行账号：<input type="text" class="input-style" placeholder="请输入银行账号" placeholder-class="placeholder-class title4 mar-left" value="{{customer.BankCardNumber}}" bindinput="inputBankCardNumber" />
            </view>

            <view class="flex top- down-">
                纳税人号：<input type="text" class="input-style" placeholder="请输入纳税人识别号" placeholder-class="placeholder-class title4 mar-left" value="{{customer.IdentifyNumber}}" bindinput="inputIdentifyNumber" />
            </view>

            <view class="flex top- down-">
                详细说明：<textarea bindblur="bindRemark" auto-focus="true" style="background-color: rgb(255, 253, 253);height: 90rpx;width: 400rpx;border-radius: 10rpx;border: 1rpx rgb(241, 243, 248) inset;padding: 0 10rpx;" placeholder="请输入详细说明" placeholder-class="placeholder-class title4 mar-left" />
            </view>

        </view>
    </view>
    
    <!--底部按钮-->
    <view class="fiex_bottom">
        <view class="flex">
            <view class="btn btn-add" bindtap="contacts">添加联系人</view>
            <view class="btn btn-save" style="margin-left: 100rpx;" bindtap="save">保存</view>
        </view>
    </view>
     <!--底部按钮-->

</view>