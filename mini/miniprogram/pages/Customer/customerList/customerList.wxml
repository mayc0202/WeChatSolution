<view class="wrap">
    <!-- 头部组件需要替换区 -->
    <view style="background-color: rgb(50, 136, 248);height: 80rpx;padding-top: 100rpx;   box-shadow: 4px 2px 8px 6px rgba(0, 0, 0, 0.06);" class="flex around">
        <view>
            <view class="arrow arrow-left left-"></view>
        </view>
        <view>
            <image src="../../../images/icon/home.png" style="width: 50rpx;height: 50rpx;margin-top: -10rpx;"></image>
        </view>
        <view style="color: rgb(50, 136, 248);">
            左边
        </view>
    </view>
    <!-- 头部组件需要替换区 -->

    <view class="wrap">
        <view class="header">
            <view class="flex between">
                <view class="flex">
                    <input value="" bindtap="searchInfo" placeholder-class="placeholer-class" placeholder="请输入客户姓名..." class="input-" />
                    <image class="search" src="../../../images/icon/search.png" bindtap="search" />
                </view>
                <view class="addbtn" bindtap="addCustomer">添加</view>
            </view>
        </view>
        <view class="list">
        <view wx:for="{{customerArr}}" wx:key="OID" data-index="{{index}}" wx:for-item="item">
            <view class="list-item">
                <view class="wrap title3">
                    客户编码：{{item.customer.Code}}
                </view>
                <view class="title3">
                    客户姓名：{{item.customer.Name}}
                </view>
                <view class="title3">
                    所属行业：{{item.customer.IndustryID}}
                </view>
                <view class="title3">
                    所属部门：{{item.customer.DeptID}}
                </view>
                <view class="title3">
                    所属销售：{{item.customer.SalesmanID}}
                </view>
                <view class="title3">
                    客户来源：{{item.customer.CustomerSourceID}}
                </view>
            </view>
        </view>
    </view>
    </view>
</view>